<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    android:orientation="horizontal"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


        <TextView
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:id="@+id/time_textView"
            android:textColor="@color/wine"
            android:textSize="15sp"
            android:gravity="left"
            android:drawableLeft="@drawable/ic_schedule_black_24dp"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:id="@+id/phoneNumber_textView"
            android:textColor="@color/wine"
            android:textSize="15sp"
            android:gravity="left"
            android:drawableLeft="@drawable/ic_phone_iphone_yellow_24dp"

            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:id="@+id/dest_textView"
            android:textColor="@color/wine"
            android:textSize="15sp"
            android:gravity="left"
            android:drawableLeft="@drawable/ic_location_searching_black_24dp"

            />

    </LinearLayout>
</android.support.v7.widget.CardView>