<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="68dp"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="8dp"
    app:cardCornerRadius="10dp"
    android:orientation="horizontal"
    android:background="@color/wine">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/cardview_bg"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="290dp"
            android:layout_height="match_parent"
            android:background="@drawable/cardview_bg"
            android:orientation="vertical">

            <TextView
                android:id="@+id/parent_location"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:drawablePadding="8dp"
                android:gravity="left"
                android:paddingLeft="10dp"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/parent_dist"
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:drawablePadding="8dp"
                android:gravity="left"
                android:paddingLeft="10dp"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/parent_date"
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:drawablePadding="8dp"
                android:gravity="left"
                android:paddingLeft="10dp"
                android:textColor="@color/white"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/addContact_btn"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_person_add_black_24dp"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/expendable_btn"
                android:layout_width="34dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/parent_location"
                android:layout_gravity="center"
                android:src="@drawable/ic_arrow_drop_down_white_24dp"
                android:visibility="visible"
                android:layout_marginTop="10dp"/>
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
